{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "jsx": "react",
    "paths": {
      "@utils/*": ["./utils/*"],
      "@styles/*": ["./styles/*"],
      "@assets/*": ["./assets/*"],
      "@templates/*": ["./templates/*"],
      "@images/*": ["./assets/images/*"],
      "@fonts/*": ["./assets/fonts/*"],
      "@components/*": ["./components/*"],
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable",
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./public"
  ]
}